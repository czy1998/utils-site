{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessStringConcat": {
          "level": "error",
          "fix": "safe"
        },
        "useDateNow": {
          "level": "info",
          "fix": "safe"
        },
        "useSimplifiedLogicExpression": "info"
      },
      "style": {
        "useTemplate": {
          "level": "error",
          "fix": "safe"
        },
        "noNegationElse": "error",
        "noYodaExpression": "info",
        "useThrowOnlyError": "info"
      },
      "correctness": {
        "noUnusedFunctionParameters": "info",
        "noUnusedVariables": "info",
        "useHookAtTopLevel": "info",
        "noUnusedImports": {
          "level": "info",
          "fix": "none"
        }
      },
      "security": {
        "noDangerouslySetInnerHtmlWithChildren": "error"
      },
      "suspicious": {
        "noConsole": "info",
        "useAwait": "info",
        "useErrorMessage": "info",
        "useNumberToFixedDigitsArgument": "info"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
